{
  "name": "lyriko",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "cf-typegen": "bun run --filter=\"*\" cf-typegen",
    "dev": "bun run cf-typegen && bun run --filter=\"./apps/*\" dev",
    "lint": "bun run --filter=\"*\" lint",
    "format": "bun run --filter=\"*\" format",
    "typecheck": "bun run --filter=\"*\" typecheck"
  },
  "devDependencies": {
    "@types/bun": "^1.2.22",
    "eslint": "^9.36.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "wrangler": "^4.38.0"
  }
}
