{
  "extends": "@workspace/typescript-config/base.json",
  "compilerOptions": {
    "strict": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "rootDir": "src",
    "typeRoots": [
      "../../node_modules/@types",
      "../../node_modules/@cloudflare"
    ],
    "types": ["workers-types/2023-07-01", "bun"],
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "paths": {
      "@/api/*": ["../../apps/api/src/*"]
    }
  },
  "watchOptions": {
    "excludeDirectories": ["**/node_modules", "**/app/web"]
  },
  "include": ["src", "../../apps/api/worker-configuration.d.ts"]
}
